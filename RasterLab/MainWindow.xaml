<Window x:Class="RasterLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RasterLab"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="340"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top controls -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="BtnOpen" Content="Open" Width="110" Height="32" Margin="0,0,8,0"
                    Click="BtnOpen_Click"/>
            <Button x:Name="BtnPixelTest" Content="Pixel Test" Width="110" Height="32" Margin="0,0,12,0"
                    Click="BtnPixelTest_Click"/>
            <CheckBox x:Name="ChkAutoStretch" Content="Auto Stretch" VerticalAlignment="Center" IsChecked="True"/>
        </StackPanel>

        <!-- Left: 2-split panel -->
        <Grid Grid.Column="0" Grid.Row="2" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <!-- 메타데이터 -->
                <RowDefinition Height="*"/>
                <!-- 픽셀 정보 -->
            </Grid.RowDefinitions>

            <!-- Meta -->
            <Border Grid.Row="0"
                    Margin="0,0,0,8"
                    BorderBrush="#808080"
                    BorderThickness="1"
                    CornerRadius="2">
                <TextBox x:Name="TxtMeta"
                         Margin="8"
                         FontFamily="Consolas"
                         FontSize="12"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         IsReadOnly="True"/>    
            </Border>

            <!-- Pixel info -->
            <Border Grid.Row="1"
                    BorderBrush="#808080"
                    BorderThickness="1"
                    CornerRadius="2">
                <TextBlock x:Name="TxtPixel"
                           Text="Pixel: -"
                           FontFamily="Consolas"
                           Margin="6"/>
            </Border>
        </Grid>

        <!-- Right: image area -->
        <Border Grid.Column="2" Grid.Row="2" BorderBrush="#808080" BorderThickness="1" CornerRadius="2">
            <ScrollViewer x:Name="SvImage"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          Background="#1E1E1E"
                          PreviewMouseWheel="SvImage_PreviewMouseWheel"
                          CanContentScroll="False">
                <Grid x:Name="ImgHost"
                      Background="Transparent"
                      MouseMove="ImgHost_MouseMove"
                      MouseLeave="ImgHost_MouseLeave">
                    <Grid.LayoutTransform>
                        <ScaleTransform x:Name="ZoomTf" ScaleX="1" ScaleY="1"/>
                    </Grid.LayoutTransform>

                    <Image x:Name="ImgRaster"
                           Stretch="None"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"
                           SnapsToDevicePixels="True"/>
                </Grid>
            </ScrollViewer>

        </Border>

        <!-- Status bar -->
        <StatusBar Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="TxtStatus" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
