<Window x:Class="ImageViewer03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageViewer03 - Step3 (TIFF Multi-page)"
        Width="1100" Height="750"
        Background="#222">
    <DockPanel>

        <!-- 상단 툴바 -->
        <Border DockPanel.Dock="Top" Background="#F2F2F2" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <Button Content="이미지 열기" Width="120" Height="32"
                        Click="BtnOpen_Click"/>

                <Separator Width="10" Opacity="0"/>

                <Button x:Name="BtnPrev" Content="◀ 이전" Width="80" Height="32"
                        Click="BtnPrev_Click" IsEnabled="False"/>

                <Button x:Name="BtnNext" Content="다음 ▶" Width="80" Height="32" Margin="6,0,0,0"
                        Click="BtnNext_Click" IsEnabled="False"/>

                <TextBlock x:Name="TxtPage" Margin="10,0,0,0" VerticalAlignment="Center"
                           Text="Page: -" />

                <TextBlock x:Name="TxtPath" Margin="14,0,0,0" VerticalAlignment="Center"
                           Text="" TextTrimming="CharacterEllipsis" Width="560"/>
            </StackPanel>
        </Border>

        <!-- 표시 영역 (ScrollViewer로 이동 가능) -->
        <Border Margin="10" BorderBrush="#555" BorderThickness="1" Background="Black">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Image x:Name="ImgMain"
                       Stretch="None"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       SnapsToDevicePixels="True"/>
            </ScrollViewer>
        </Border>

    </DockPanel>
</Window>
