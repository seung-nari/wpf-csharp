<Window x:Class="ImageViewer04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageViewer04 - Step4 (Metadata)"
        Width="1200" Height="780"
        Background="#222">
    <DockPanel>

        <!-- Top toolbar -->
        <Border DockPanel.Dock="Top" Background="#F2F2F2" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="이미지 열기" Width="120" Height="32"
                        Click="BtnOpen_Click"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                    <Button x:Name="BtnPrev" Content="◀ 이전" Width="80" Height="32"
                            Click="BtnPrev_Click" IsEnabled="False"/>
                    <Button x:Name="BtnNext" Content="다음 ▶" Width="80" Height="32" Margin="6,0,0,0"
                            Click="BtnNext_Click" IsEnabled="False"/>
                </StackPanel>

                <TextBlock Grid.Column="2" x:Name="TxtPage" Margin="10,0,0,0"
                           VerticalAlignment="Center" Text="Page: -"/>

                <TextBlock Grid.Column="3" x:Name="TxtPath" Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"/>
            </Grid>
        </Border>

        <!-- Main -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Image view -->
            <Border Grid.Column="0" BorderBrush="#555" BorderThickness="1" Background="Black">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Image x:Name="ImgMain"
                           Stretch="None"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           SnapsToDevicePixels="True"/>
                </ScrollViewer>
            </Border>

            <!-- Metadata panel -->
            <Border Grid.Column="1" Margin="10,0,0,0"
                    BorderBrush="#555" BorderThickness="1" Background="#111">
                <DockPanel>
                    <Border DockPanel.Dock="Top" Background="#1A1A1A" Padding="10">
                        <TextBlock Text="메타정보" Foreground="White" FontSize="16" FontWeight="SemiBold"/>
                    </Border>

                    <TextBox x:Name="TxtMeta"
                             Margin="10"
                             Background="#0B0B0B"
                             Foreground="#EAEAEA"
                             BorderBrush="#333"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="12"/>
                </DockPanel>
            </Border>
        </Grid>

    </DockPanel>
</Window>
