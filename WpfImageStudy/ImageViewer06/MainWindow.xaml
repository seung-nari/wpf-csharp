<Window x:Class="ImageViewer06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GDAL Raster Viewer" Width="1200" Height="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left panel -->
        <DockPanel Grid.Column="0" Margin="10">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Width="120" Margin="0,0,10,0" Click="Open_Click">Open</Button>
                <CheckBox x:Name="ChkAutoStretch" Content="Auto Stretch" IsChecked="True" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBox x:Name="TxtInfo"
                     FontFamily="Consolas"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"/>
        </DockPanel>

        <!-- Right panel -->
        <Border Grid.Column="1" Margin="10" BorderThickness="1" BorderBrush="Gray">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Image x:Name="Img" Stretch="None" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
