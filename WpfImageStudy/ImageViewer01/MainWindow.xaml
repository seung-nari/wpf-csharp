<Window x:Class="ImageViewer01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageViewer01 - Step1"
        Width="1000" Height="700">
    
    <DockPanel>

        <!-- 상단 툴바 -->
        <Border DockPanel.Dock="Top" Background="#F2F2F2" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button Content="이미지 열기 (JPG/PNG/TIFF)" Width="220" Height="32"
                        Click="BtnOpen_Click"/>
                <TextBlock x:Name="TxtPath" Margin="12,0,0,0" VerticalAlignment="Center"
                           Text="파일을 선택하세요." TextTrimming="CharacterEllipsis"/>
            </StackPanel>
        </Border>

        <!-- 이미지 표시 영역 -->
        <Border Margin="10" BorderBrush="#DDD" BorderThickness="1" Background="Black">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Image x:Name="ImgMain"
                       Stretch="None"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </ScrollViewer>
        </Border>

    </DockPanel>
</Window>
